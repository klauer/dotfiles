# vi: syntax=sh

alias ln='ln -v'
alias mkdir='mkdir -p'
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'

alias ue='tmux update-env'

# Use neovim if available:
(which nvim > /dev/null) && use_nvim=1
if [[ -n "$use_nvim" ]]; then
    # -X stops from connecting to X server
    alias vi='nvim'
    alias vim='nvim'
    alias view='nvim -R'
    export EDITOR=nvim
    git config --global core.editor "nvim"
    echo "* Using neovim"
else
    alias vi='vim -X'
    alias vim='vim -X'
    alias view='vim -XR'
    export EDITOR=vim
    git config --global core.editor "vim"
    echo "* Using vim"
fi

alias ssh='ssh -Y'
alias sudo='sudo ' # this allows for aliases to be passed through to sudo

# startup gdb with python backtrace stuff
alias pythongdb='gdb -iex "set auto-load safe-path /usr/bin" python2.7-dbg'
alias rc='source ~/conda_ramdisk.sh'
alias sac='source activate'
alias sdac='source deactivate'
alias pyoutline="grep -Hn --color '^class \|def '"

# ref: https://github.com/thoughtbot/dotfiles/blob/master/aliases

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
