#!/bin/bash

REPO=$1

[ -z "$REPO" ] && echo "Usage: tmuxr [repo_name]" && exit 1;

if tmux has-session -t $REPO; then
    echo "Has session";
else
    echo "No session";
    REPO_PATH=$HOME/Repos/$REPO

    if [ ! -d $REPO_PATH ]; then
        echo "Invalid repo name: $REPO";
        exit 1;
    fi
    tmux new-session -s $REPO -c $HOME
fi

tmux attach-session -t $REPO
